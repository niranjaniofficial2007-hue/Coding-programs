public class Main {

    static void lightON() {
        System.out.println("ON button clicked");
        System.out.println("Background changed to YELLOW (Light ON)");
    }

    static void lightOFF() {
        System.out.println("OFF button clicked");
        System.out.println("Background changed to BLACK (Light OFF)");
    }

    public static void main(String[] args) {

        System.out.println("Smart Home Dashboard Simulation\n");

        lightON();   // simulate ON click
        lightOFF();  // simulate OFF click
    }
}
